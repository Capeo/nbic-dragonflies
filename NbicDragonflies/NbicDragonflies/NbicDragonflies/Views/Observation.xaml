<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NbicDragonflies.Views.Observation">
  <ContentPage.Content>

    <ListView x:Name="ObservationList">
      <ListView.Header>
        <StackLayout Orientation="Horizontal" BackgroundColor="#cccccc">
          <Label Text="Arter        "/>
          <Label Text="Dato        " />
          <Label Text="Sted        " />
          <Label Text="BrukerNavn" />
        </StackLayout>
      </ListView.Header>
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal">
              <Label Text="{Binding SpeciesGuess}" />
              <Label Text="{Binding ObservedOn}" />
              <Label Text="{Binding PlaceGuess }" />
              <Label Text="{Binding UserLogin }" />
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </ContentPage.Content>
</TabbedPage>