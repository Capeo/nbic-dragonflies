<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NbicDragonflies.Views.SpeciesImageView">
  <Frame x:Name = "ImageFrame" HorizontalOptions="FillAndExpand" Padding="5">
    <Frame.Content>
      <StackLayout HorizontalOptions="Fill">
        <Image x:Name="ImageContent" HorizontalOptions="Fill"/>
        <Label x:Name="SpeciesName" VerticalOptions="StartAndExpand" FontAttributes="Bold" FontFamily="Helvetica" FontSize="Small"/>
        <Label x:Name="Date" VerticalOptions="EndAndExpand" FontFamily="Helvetica" FontSize="Small"/>
      </StackLayout>
    </Frame.Content>
  </Frame>

</ContentView>