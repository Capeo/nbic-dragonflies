<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NbicDragonflies.Views.SpeciesImageView">
  <Frame x:Name = "ImageFrame" HorizontalOptions="FillAndExpand" Padding="5">
    <Frame.Content>
      <StackLayout HorizontalOptions="FillAndExpand">
        <Image x:Name="ImageContent" HorizontalOptions="Fill"/>
        <Label x:Name="Owner" HorizontalOptions="Fill" TextColor="Gray" Font="Helvetica"/>
        <Label x:Name="Date" HorizontalOptions="Fill" TextColor="Black" FontFamily="Helvetica"/>
		<Label x:Name="License" HorizontalOptions="Fill" TextColor="Black" FontFamily="Helvetica"/>
      </StackLayout>
    </Frame.Content>
  </Frame>
</ContentView>