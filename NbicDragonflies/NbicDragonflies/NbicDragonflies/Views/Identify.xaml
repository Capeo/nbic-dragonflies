<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NbicDragonflies.Views.Identify"
             Title="Identify Species Page">
  <TabbedPage.Children >
    <ContentPage Title="Sporsmal">
      <StackLayout Margin="10" Spacing="5" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Label x:Name="AlternativeCategory" FontSize="14" FontAttributes="Bold"/>
        <ScrollView x:Name="ScrollView" Margin="10">
          <StackLayout x:Name="StackLayout"/>
        </ScrollView>
        <StackLayout Orientation="Horizontal">
          <Button x:Name="NextQuestion"/>
          <Button x:Name="PreviousQuestion"></Button>
        </StackLayout>
      </StackLayout>
    </ContentPage>
    <ContentPage Title="Resultater">
      <StackLayout Spacing="5" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Frame Padding="5" Margin="10" OutlineColor="Black" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HasShadow="False">
          <Frame.Content>
            <StackLayout Spacing="5" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
              <ScrollView>
                <ListView x:Name="ResultsList" VerticalOptions="FillAndExpand" SeparatorVisibility="None">
                  <ListView.ItemTemplate>
                    <DataTemplate>
                      <ImageCell ImageSource = "{Binding ImageSource}" Text = "{Binding Text}" Detail = "{Binding Detail}"/>
                    </DataTemplate>
                  </ListView.ItemTemplate>
                </ListView>
              </ScrollView>
            </StackLayout>
          </Frame.Content>
        </Frame>
      </StackLayout>
    </ContentPage>
  </TabbedPage.Children>
</TabbedPage>
