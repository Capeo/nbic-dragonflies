<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:views="clr-namespace:NbicDragonflies.Views;assembly=NbicDragonflies"
			 xmlns:resources="clr-namespace:NbicDragonflies.Resources;assembly=NbicDragonflies"
			 x:Class="NbicDragonflies.Views.Gallery"
			Title="{x:Static resources:LanguageResource.GalleryLabel}"
			Padding = "0, 0, 0, 0">
	<ContentPage.Content>
		<Frame x:Name="GalleryFrame" HorizontalOptions="FillAndExpand" Padding="10">
		<Frame.Content>
		<StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
		<Grid>
		  <Grid.RowDefinitions>
		    <RowDefinition Height="*" />
		    <RowDefinition Height="*" />
			<RowDefinition Height="*" />
		  </Grid.RowDefinitions>
		  <Grid.ColumnDefinitions>
		    <ColumnDefinition Width="*" />
		    <ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		  </Grid.ColumnDefinitions>
			

			<views:SpeciesImageView x:Name="p00" Grid.Row="0" Grid.Column="0"/>
			<views:SpeciesImageView x:Name="p01" Grid.Row="0" Grid.Column="1"/>
			<views:SpeciesImageView x:Name="p02" Grid.Row="0" Grid.Column="2"/>
			<views:SpeciesImageView x:Name="p10" Grid.Row="1" Grid.Column="0"/>
   			<views:SpeciesImageView x:Name="p11" Grid.Row="1" Grid.Column="1"/>
			<views:SpeciesImageView x:Name="p12" Grid.Row="1" Grid.Column="2"/>
			<views:SpeciesImageView x:Name="p20" Grid.Row="2" Grid.Column="0"/>
			<views:SpeciesImageView x:Name="p21" Grid.Row="2" Grid.Column="1"/>
			<views:SpeciesImageView x:Name="p22" Grid.Row="2" Grid.Column="2"/>


		</Grid>
			<Button x:Name="nextPage" Text="Next page" HorizontalOptions="End" VerticalOptions="End"/>
		</StackLayout>	
		</Frame.Content>
		</Frame>
	</ContentPage.Content>
</ContentPage>