<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NbicDragonflies.Views.Gallery"
			Title = "Gallery"
			Padding = "0, 20, 0, 0">
	<ContentPage.Content>
	<ListView x:Name="GalleryList" VerticalOptions="FillAndExpand" SeparatorVisibility="None">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ImageCell ImageSource = "{Binding ImageSource}" Text = "{Binding Text}" Detail = "{Binding Detail}"/>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</ContentPage.Content>
</ContentPage>